--
-- >>> Escriba su respuesta a partir de este punto <<<
--
fs -rm -f -r data.csv
fs -put data.csv

u = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);


R1 = FILTER u BY ($4) matches '.*b.*';
R2 = FOREACH R1 GENERATE $4;
DUMP R2;


STORE R2 INTO 'output';

fs -copyToLocal output output